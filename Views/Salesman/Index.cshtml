@model IEnumerable<EKomplet.Models.Salesman>

@{
    ViewData["Title"] = "Index";
}

<h1>Sælgere</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Telefonnummer
            </th>
            <th>
                E-mail
            </th>
            <th>
                Fornavn
            </th>
            <th>
                Efternavn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalesmanID">Rédiger</a> |
                <a asp-action="Details" asp-route-id="@item.SalesmanID">Detaljer</a> |
                <a asp-action="Delete" asp-route-id="@item.SalesmanID">Slet</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create">Tilføj ny sælger</a>
</p>
