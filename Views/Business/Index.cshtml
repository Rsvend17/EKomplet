@model IEnumerable<EKomplet.Models.Business>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BusinessName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.District)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.District.DistrictID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BusinessID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BusinessID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BusinessID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
