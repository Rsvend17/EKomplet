@model EKomplet.ServiceLayer.ViewModel.DistrictCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Tilføj nyt distrikt</h1>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="district.DistrictName" class="control-label">Distrikt navn</label>
                <input asp-for="district.DistrictName" class="form-control"/>
                <span asp-validation-for="district.DistrictName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salesmenStatus.SalesmanID" class="control-label">Vælg primær sælger</label>
                <select asp-for="salesmenStatus.SalesmanID" class="form-control" asp-items="ViewBag.SalesmanName"></select>
                <span asp-validation-for="salesmenStatus.SalesmanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tilføj distrikt" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Tilbage</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}