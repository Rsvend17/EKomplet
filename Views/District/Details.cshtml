@model EKomplet.ServiceLayer.ViewModel.DistrictDetailsModelView


    @{
        ViewData["Title"] = "Details";
    }

    <pre>
        <h1>Detaljer om @Html.DisplayFor(model => model.District.DistrictName)</h1>
</pre>

    <h2> Butikker i @Html.DisplayFor(model => model.District.DistrictName) </h2>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Butiksnavn
                </th>
                <th>
                    Adresse
                </th>
                <th>
                    Postnummer
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Businesses)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BusinessName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h2> Sælgere i @Html.DisplayFor(model => model.District.DistrictName) </h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                   Navn
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Telefonnummer
                </th>
                <th>
                    Status
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Salesmen)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                    <td>
                        <a asp-action="DeleteSalesmanDistrict" asp-route-id= "@Model.District.DistrictID" asp-route-myvar="@item.SalesmanID">Fjern fra distrikt</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <div>
        <a asp-action="Index">Tilbage</a> | <a asp-action="AddSalesmanToDistrict" asp-route-id="@Model.District.DistrictID">Tilføj Sælger</a>
    </div>
