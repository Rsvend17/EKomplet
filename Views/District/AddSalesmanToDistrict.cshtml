@model EKomplet.ServiceLayer.ViewModel.AddSalesmanToDistrictViewModel

@{
    ViewData["Title"] = "AddSalesmanToDistrict";
}

<h1>Tilføj sælger til @Html.DisplayFor(m => m.district.DistrictName) </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSalesmanToDistrictConfirmed" asp-route-id="@Model.district.DistrictID">
            <div class="form-group">
                <label asp-for="salesmenStatus.SalesmanID" class="control-label">Vælg sælger</label>
                <select asp-for="salesmenStatus.SalesmanID" class="form-control" asp-items="ViewBag.SalesmanName"></select>
                <span asp-validation-for="salesmenStatus.SalesmanID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salesmenStatus.Status" class="control-label">Vælg status</label>
                <select asp-for="salesmenStatus.Status" class="form-control" asp-items="ViewBag.Statuses"></select>
                <span asp-validation-for="salesmenStatus.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tilføj sælger" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>
<a asp-action="Details" asp-route-id="@Model.district.DistrictID"> Tilbage</a>